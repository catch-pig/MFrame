<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/title_backgroud</item>
    <item name="colorPrimaryDark">@color/title_backgroud</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="title_bar_style">@style/titleBarStyle</item>
    <item name="loading_view_style">@style/LoadingView</item>
  </style>

  <style name="titleBarStyle">
    <item name="frame_title_background_color">@color/title_backgroud</item>
    <item name="frame_title_title_color">@color/c_fff</item>
    <item name="frame_title_menu_text_color">@color/c_fff</item>
  </style>

  <style name="LoadingView">
    <item name="loading_view_size">40dp</item>
    <item name="loading_view_color">@color/title_backgroud</item>
  </style>
</resources>
