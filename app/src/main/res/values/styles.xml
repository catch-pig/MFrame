<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="title_bar_style">@style/title_bar_style</item>
    <item name="loading_view_style">@style/LoadingView</item>
  </style>

  <style name="title_bar_style">
    <item name="title_bar_background">@color/colorPrimary</item>
    <item name="title_bar_menu_back_icon_res">@drawable/ic_arrow_back_white</item>
  </style>

  <style name="LoadingView">
    <item name="loading_view_size">40dp</item>
    <item name="loading_view_color">@color/colorPrimary</item>
  </style>

</resources>
