<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    >
  <TextView
      android:id="@+id/mframe_titlebar_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:textSize="18sp"
      tools:text="这是标题"
      />
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/mframe_titlebar_image_left_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        tools:src="@mipmap/close"
        />
    <ImageView
        android:id="@+id/mframe_titlebar_image_left_minor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        tools:src="@mipmap/close"
        />
    <TextView
        android:id="@+id/mframe_titlebar_text_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="返回"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:orientation="horizontal"
      tools:ignore="RelativeOverlap"
      >
    <ImageView
        android:id="@+id/mframe_titlebar_image_right_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        tools:src="@mipmap/close"
        />
    <ImageView
        android:id="@+id/mframe_titlebar_image_right_minor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        tools:src="@mipmap/close"
        />
    <TextView
        android:id="@+id/mframe_titlebar_text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="退出登录"
        />
  </LinearLayout>
</RelativeLayout>