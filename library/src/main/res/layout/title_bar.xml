<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/title_height"
    >
  <TextView
      android:id="@+id/mframe_text_title"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:ellipsize="marquee"
      android:gravity="center"
      android:marqueeRepeatLimit="marquee_forever"
      android:singleLine="true"
      android:textSize="18sp"
      tools:text="这是标题"
      />
  <LinearLayout
      android:id="@+id/mframe_back_layout"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginLeft="15dp"
      android:layout_marginStart="15dp"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/mframe_back_image"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        tools:src="@mipmap/close"
        />

    <TextView
        android:id="@+id/mframe_back_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:gravity="center_vertical"
        tools:text="返回"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/mframe_layout_right"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="right"
      android:layout_marginRight="15dp"
      android:gravity="center_vertical|right"
      android:orientation="horizontal"
      tools:ignore="RelativeOverlap,RtlHardcoded"
      >

    <ImageView
        android:id="@+id/mframe_image_right2"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        tools:src="@mipmap/close"
        />
    <TextView
        android:id="@+id/mframe_text_right2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:gravity="center_vertical"
        tools:text="详情"
        />
    <ImageView
        android:id="@+id/mframe_image_right1"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        tools:src="@mipmap/close"
        />

    <TextView
        android:id="@+id/mframe_text_right1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:gravity="center_vertical"
        tools:text="详情"
        />
  </LinearLayout>
</FrameLayout>
